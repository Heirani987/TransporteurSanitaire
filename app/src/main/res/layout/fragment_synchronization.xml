<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!-- Déclaration des variables Data Binding si nécessaire -->
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".ui.synchronization.SynchronizationFragment">

        <!-- Titre de l'écran -->
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/sync_title"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Affichage du nom du fichier Excel sélectionné -->
        <TextView
            android:id="@+id/textViewFileName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/sync_no_file_selected"
            android:padding="8dp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/textViewTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <!-- Bouton pour parcourir et sélectionner le fichier Excel -->
        <Button
            android:id="@+id/buttonBrowse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sync_browse"
            app:layout_constraintTop_toBottomOf="@id/textViewFileName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <!-- Bouton Sync pour mettre à jour la base (précédemment buttonUpdate remplacé par buttonSync) -->
        <Button
            android:id="@+id/buttonSync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sync_update_database"
            app:layout_constraintTop_toBottomOf="@id/buttonBrowse"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:visibility="gone"/>

        <!-- Bouton pour créer une nouvelle base -->
        <Button
            android:id="@+id/buttonCreateNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sync_create_new_database"
            app:layout_constraintTop_toBottomOf="@id/buttonSync"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <!-- Zone pour afficher une éventuelle erreur -->
        <TextView
            android:id="@+id/textViewError"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark"
            android:text="@string/sync_no_file_selected"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/buttonCreateNew"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        <!-- Bouton "Annuler" pour revenir à l'écran Home -->
        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sync_cancel"
            app:layout_constraintTop_toBottomOf="@id/textViewError"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>